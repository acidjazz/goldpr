.soon
  background-color: c.blue1
  height 100%
  > .border
    padding 60px
    border: 5px solid c.white1
    max-width 900px
    margin 40px auto
    > .box
      > .sector
        width 50%
        height 400px
      > .left
        float left
        background-color: c.white1
        > .logo
          width 100%
          margin 20% 0 0 0
          > svg
            width inherit
            height inherit
            #blueCircle
              animation growBlue 0.5s ease-in 0s 
      > .right
        float right
        background-color: c.red1
        color: c.white1
        text-align center
        > .detail
          width 250px
          margin auto
          padding 15% 0 0 0 
          > .title
            font f_h1
            border-bottom: 1px solid c.white1
            padding 0 0 10px 0
            animation cellInX 0.2s linear 0s
          > .copy
            padding 10px 0 20px 0
            line-height 20px
            animation cellInX 0.2s linear 0.1s
          > .button
            cursor pointer
            padding 15px 20px
            border: 1px solid c.white1
            display inline-block
            transition background-color 0.1s linear, color 0.1s linear 0.05s
            color: c.white1
            text-decoration none
            &:hover
              background-color: c.white1
              color: c.red1
          > .socials
            padding 20px 0 0 0
            > .social
              display inline-block
              width 30px
              height 30px
              margin 0 5px
              cursor pointer
              padding 5px
              transition background-color 0.1s linear, fill 0.1s linear 0.05s
              border-radius 3px
              &:hover
                background-color: c.white1
                > svg
                  > path, > g > path, > g > g > path
                    fill: c.red1

              > svg
                width inherit
                height inherit
                > path, > g > path, > g > g > path
                  fill: c.white1

@media all and (min-width: 1px) and (max-width: 1000px)
  .soon
    padding 10px
    > .border
      padding 10px
      margin 10px auto
      > .box
        > .sector
          float none
          width 100%
          height auto
          padding 10px 0
          &.left
            > .logo
              margin 0 0 0 0
          &.right
            > .detail
              padding 10% 0 0 0
                  

@keyframes growBlue
  from
    transform scale(0.5) translate(40%, 50%)
    opacity 0
  to
    transform scale(1) translate(0%, 0%)
    opacity 1


@keyframes cellInX
  from
    transform translate(10px, 0)
    opacity 0
  to
    transform translate(0, 0)
    opacity 1

