.dblreds
  border-top: 2px solid c.red1
  border-bottom: 2px solid c.red1
  height 10px
  margin 20px 0
  &.top
    margin 20px 0 40px 0
  &.bot
    margin 40px 0 20px 0
  &.both
    margin 40px 0

.title
  color: c.gold1
  font: f.h3
  text-transform uppercase
  text-align center
  padding 20px 0
  > .f_h4
    font: f.h4
    display inline
  &.sub
    color: c.red1
    font: f.h5
  &.morebot
    padding 20px 0 40px 0

.copy
  max-width 900px
  margin auto
  padding 20px 50px
  line-height 25px
  letter-spacing 1px
  > a
    color: c.gold1
    text-decoration none
  &.shorter
    max-width 700px
  &.large, > .large
    font: f.h3
  &.largeb, > .largeb
    font: f.h4
  &.medium, > .medium
    font: f.copy2
  > .medium, > .large, > .largeb
    display inline
  &.upper
    text-transform uppercase
  &.center
    text-align center
  &.gold, > .gold
    color: c.gold1
  &.nobotpad
    padding 20px 50px 0 50px
  &.notoppad
    padding 0 50px 20px 50px

a.link
  display block
  color: c.red1
  font: f.copy4
  text-align center
  text-decoration none
  margin 0 0 20px 0

.xing
  text-align center
  color: c.red1
  > svg
    width 150px
    height 30px
    > g
      fill: c.red1

.svgstroke
  fill none
  stroke: c.red1
  stroke-width 1.7735
  stroke-linecap round
  stroke-linejoin round
  stroke-miterlimit 10

.sections
  desktop()
  padding 20px 50px

  > .section
    width 33%
    height 400px
    float left
    > .thumbnail
      width 30%
      margin auto
      padding 0 0 20px 0
      border-bottom: 2px solid c.gold1
      &.at > svg > g > g > path
        fill: c.red1
    > .copy
      padding 30px 20px
      line-height 25px


.sections > .section.off
  opacity 0
  transition opacity 0.2s linear 0.2s, transform 0.2s linear 0.2s
.sections > .section.on
  opacity 1
  transform translate(0, 0)
  transition opacity 0.2s linear 0s, transform 0.2s linear 0s

.sections > .section.off
  transform translate(-20px, 0)

for num in 1..3
  .sections > .section:nth-child(3n+{num})
    transition-delay unit(num*0.1, 's')


.cta
  display block
  font: f.h2
  padding 25px
  letter-spacing 1px
  background-color: rgba(c.white2, 0.8)
  color: c.gold1
  width 320px
  text-align center
  text-transform uppercase
  margin 20px auto
  text-decoration none

.steps
  width 900px
  margin auto
  > .step
    width 50%
    &.left
      float left
      margin 0 0 50px 0
      > .copy
        padding 0 100px 0 0
      > .number
        margin 0 150px 0 0
    &.right
      float right
      margin 50px 0 0 0
      > .copy
        padding 0 0 0 100px
      > .title
        padding 0 0 0 100px
      > .number
        margin 0 50px 0 0
    > .number
      font: f.h6
      color: c.blue1
      text-align right
    > .title
      text-align left
      padding 0
      color: c.red1
      margin -240px 0 0 0
      transform translateZ(0)
    > .copy
      padding 0 0 0 0
      transform translateZ(0)

.steps > .step.off
  opacity 0
  transition opacity 0.2s linear 1s, transform 0.2s linear 1s
.steps > .step.off > .number
  opacity 0.5
  transform scale(1.2)
  transition opacity 0.2s linear 1s, transform 0.2s linear 1s

.steps > .step.on > .number
  opacity 1
  transform scale(1)
  transition opacity 0.2s ease-out 0.2s, transform 0.2s ease-out 0.2s

.steps > .step.on
  opacity 1
  transform translate(0, 0)
  transition opacity 0.4s linear 0s, transform 0.4s linear 0s

.steps > .step.off
  transform translate(0, -40px)

.values
  width 900px
  margin auto
  column-count 2
  column-gap 50px
  > .value
    > .title
      color: c.gold1
      padding 0 0 10px 0
      font: f.h5
    > .xing
      padding 0 0 20px 0
    > .copy
      text-align center
      padding 0 20px 20px 20px
    &:nth-child(5) > .title
        -webkit-column-break-before always

