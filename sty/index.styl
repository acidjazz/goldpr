
.lax
  height 40vw
  &.contact > .inner
    background-image url(/img/contact.jpg)
    background-position 0% 70%
  &.work > .inner
    background-image url(/img/work.jpg)
    background-position 0% 70%
  &.clients > .inner
    background-image url(/img/clients.jpg)
    background-position 0% 90%
  &.team > .inner
    background-image url(/img/team.jpg)
    background-position 0% 90%
  &.services > .inner
    background-image url(/img/services.jpg)
    background-position 0% 90%
  &.closecheers > .inner
    background-image url(/img/closecheers.jpg)
    background-position 0% 90%
  &.cheers > .inner
    background-image url(/img/cheers.jpg)
    background-position 0% 90%
  &.standout > .inner
    background-image url(/img/standout.jpg)
    background-position 50% 50%
  > .inner
    height 100%
    background-size cover
    position relative
    > .overlay
      position absolute
      font: f.h2
      padding 25px
      &.wider
        padding 25px 12vw
      letter-spacing 1px
      > .title
        font: f.h1
      > .text
        line-height 30px
      &.upper
        text-transform uppercase
      &.topright
        top 10%
        right 0
      &.midleft
        top 40%
        left 0
      &.midright
        top 40%
        right 0
      &.centered
        top 50%
        left 50%
        margin-top -110px
        margin-left -197px
        text-align center
      &.gold
        background-color: rgba(c.white2, 0.8)
        color: c.gold1
      &.red
        background-color: rgba(c.red1, 0.8)
        color: c.white1
        > .title
          color: c.white1

.dblreds
  border-top: 2px solid c.red1
  border-bottom: 2px solid c.red1
  height 10px
  margin 20px 0

.title
  color: c.gold1
  font: f.h3
  text-transform uppercase
  text-align center
  padding 20px 0
  > .f_h4
    font: f.h4
    display inline
  &.sub
    color: c.red1
    text-decoration underline
    font: f.h5

.copy
  max-width 900px
  margin auto
  padding 20px 50px
  line-height 25px
  &.medium, > .medium
    font: f.copy2
  > .medium
    display inline
  &.upper
    text-transform uppercase
  &.center
    text-align center
  &.nobotpad
    padding 20px 50px 0 50px
  &.notoppad
    padding 0 50px 20px 50px

a.link
  display block
  color: c.red1
  font: f.copy4
  text-align center
  text-decoration none
  margin 0 0 20px 0

.xing
  text-align center
  color: c.red1
  letter-spacing 10px
  font-size 20px

.svgstroke
  fill none
  stroke: c.red1
  stroke-width 1.7735
  stroke-linecap round
  stroke-linejoin round
  stroke-miterlimit 10

.sections
  desktop()
  padding 20px 50px

  > .section
    width 33%
    float left
    > .thumbnail
      width 30%
      margin auto
      padding 0 0 20px 0
      border-bottom: 2px solid c.gold1
      &.at > svg > g > path
        fill: c.red1
    > .copy
      padding 30px 50px
      line-height 30px

.cta
  font: f.h2
  padding 25px
  letter-spacing 1px
  background-color: rgba(c.white2, 0.8)
  color: c.gold1
  width 320px
  text-align center
  text-transform uppercase
  margin 20px auto

.steps
  width 900px
  margin auto
  > .step
    width 50%
    &.left
      float left
    &.right
      float right
      margin 100px 0 0 0
    > .number
      font: f.h6
      color: c.blue1
      text-align right
      margin 0 150px 0 0
    > .title
      text-align left
      padding 0
      color: c.red1
      margin -240px 0 0 0
    > .copy
      padding 0 100px 0 0

.values
  width 900px
  margin auto
  column-count 2
  column-gap 50px
  > .value
    > .title
      color: c.red1
      padding 0 0 10px 0
      font: f.h5
    > .copy
      padding 0 0 20px 0
      text-align center
    &:nth-child(5) > .title
        -webkit-column-break-before always

.listings
  width 900px
  margin auto
  column-count 3
  column-gap 50px
  > .listing
    > .title
      padding 10px 0 10px 0
      color: c.black1
      font: f.copy1
      text-align left
    > .copy
      padding 0
      font: f.copy3
    &:nth-child(3) > .title
      -webkit-column-break-before always

.clientlist
  width 900px
  margin auto
  > .client
    width 33%
    float left
    > .inner
      height 200px
      margin 5px
      background-size contain
      background-position 50% 50%
      background-repeat no-repeat

