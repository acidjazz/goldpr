.clientlist
  width 900px
  margin auto
  > .client
    width 20%
    float left
    > .inner
      height 100px
      margin 20px
      background-size contain
      background-position 50% 50%
      background-repeat no-repeat

.studies
  width 900px
  margin auto
  > .study
    width 33.3333%
    float left
    text-decoration none
    text-align center
    > .inner
      background-color: c.blue1
      margin 20px
      padding 15px 12px 10px 10px
      transition background-color 0.1s linear
      > .video
        float right
        width 30px
        height 30px
        margin -20px -10px 0 0
      &:hover
        background-color: c.red1
      > .title
        padding 0 0 10px 0
        color: c.white1
        font: f.h5
        text-decoration none
      > .type
        color: c.white1
 

@media all and (min-width: 1px) and (max-width: 1000px)
  .lax
    height 70vw
    > .overlay.centered
      width 90%
  
  .copy
    padding 10px 20px
    &.nobotpad
      padding 10px 20px 0 20px
    &.notoppad
      padding 0 20px 10px 20px

  .sections
    padding 10px 20px
    > .section
      width auto
      height auto
      margin auto
      transition-delay 0s !important
      > .copy
        padding 10px 10px 50px 10px
  .steps
    width 100%
    > .step
      width 90%
      margin 5% !important
      float none !important
      > .number
        margin 0 !important
      > .copy
        padding 0 !important
      > .title
        padding 0 !important
  .values
    width auto
    padding 10px 
    column-count auto
    column-gap 1px
    &:nth-child(5) > .title
        -webkit-column-break-before avoid

  .listings
    width auto
    padding 20px 10px
    column-count auto
    column-gap 0px
    > .listing
      padding 10px 
  
  .teamlist
    width auto
    > .member
      width auto
      float none
      margin auto
      opacity 1 !important
      transform translate(0, 0) !important
      > .copy
        opacity 1
        > .name, > .position, > .email
          opacity 1

  .studies
    width auto
    > .study
      width 100%
 
  .clientlist
    width auto
    text-align center
    > .client
      width 40%
      float none
      margin auto
      display inline-block
      > .inner
        margin 10px 0
  for num in 1..2
    .clientlist > .client:nth-child(2n+{num})
      transition-delay unit(num*0.1, 's')
