
.lax
  height 40vw
  &.cheers > .inner
    background-image url(/img/cheers.jpg)
    background-position 0% 90%
  &.standout > .inner
    background-image url(/img/standout.jpg)
    background-position 50% 50%
  > .inner
    height 100%
    background-size cover
    position relative
    > .overlay
      position absolute
      font: f.h2
      padding 25px
      letter-spacing 1px
      > .title
        font: f.h1
      > .text
        line-height 30px
      &.upper
        text-transform uppercase
      &.topright
        top 10%
        right 0
      &.centered
        top 50%
        left 50%
        margin-top -110px
        margin-left -197px
        text-align center
      &.gold
        background-color: rgba(c.white2, 0.8)
        color: c.gold1
      &.red
        background-color: rgba(c.red1, 0.8)
        color: c.white1
        > .title
          color: c.white1

.dblreds
  border-top: 2px solid c.red1
  border-bottom: 2px solid c.red1
  height 10px
  margin 20px 0

.title
  color: c.gold1
  font: f.h3
  text-transform uppercase
  text-align center
  padding 20px 0
  > .f_h4
    font: f.h4
    display inline

.copy
  max-width 1200px
  padding 20px 50px

.xing
  text-align center
  color: c.red1
  letter-spacing 10px
  font-size 20px


