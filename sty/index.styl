.listings
  width 900px
  margin auto
  column-count 3
  column-gap 50px
  > .listing
    > .title
      padding 10px 0 10px 0
      color: c.black3
      font: f.copy6
      text-align left
    > .copy
      padding 0
      font: f.copy5
      line-height 20px
    &:nth-child(4) > .title
    &:nth-child(6) > .title
      -webkit-column-break-before always

.listings_pr > .listing:nth-child(3) > .title
  -webkit-column-break-before always

.teamlist
  width 900px
  margin auto
  > .member
    width 33%
    float left
    position relative
    > .inner
      width 90%
      margin 5%
      height 300px
      background-size cover
      background-position 100% 0%
      background-repeat no-repeat
      background-color: c.blue1
    &:hover > .copy
      opacity 1
      > .name
        opacity 1
      > .position
        opacity 1
      > .email
        opacity 1
    > .copy
      transition opacity 0.2s linear 0s
      opacity 0
      position absolute
      bottom 10%
      left 5%
      background-color: rgba(c.white2, 1)
      color: c.red1
      width 80%
      padding 10px
      text-align right
      overflow hidden
      > .name
        padding 0 0 5px 0
        font: f.copy2
        opacity 0
        transition opacity 0.2s linear 0.1s
      > .position
        font: f.copy3
        padding 0 0 5px 0
        opacity 0
        transition opacity 0.2s linear 0.15s
      > .email
        display block
        font: f.copy3
        padding 0 0 5px 0
        color: c.red1
        text-decoration: none
        opacity 0
        transition opacity 0.2s linear 0.2s
