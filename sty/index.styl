.lax
  height 50vw
  overflow hidden
  position relative
  transform-style inherit
  &.cheers > .inner
    background-image url(/img/lax/cheers.jpg)
    background-position 20% 0%
  &.standout > .inner
    background-image url(/img/lax/standout.jpg)
    background-position 50% 50%
  &.closecheers > .inner
    background-image url(/img/lax/closecheers.jpg)
    background-position 50% 0%
  &.contact > .inner
    background-image url(/img/lax/contact.jpg)
    background-position 0% 70%
  &.work > .inner
    background-image url(/img/lax/work.jpg)
    background-position 0% 70%
  &.clients > .inner
    background-image url(/img/lax/clients.jpg)
    background-position 0% 90%
  &.team > .inner
    background-image url(/img/lax/team.jpg)
    background-position 0% 90%
  &.services > .inner
    background-image url(/img/lax/services.jpg)
    background-position 0% 90%
  > .inner
    height 150%
    margin-top -20%
    background-size cover
  > .overlay
    position absolute
    font: f.h2
    padding 25px
    letter-spacing 1px
    &.wider
      padding 25px 12vw
    > .title
      font: f.h1
    > .text
      line-height 30px
    &.upper
      text-transform uppercase
    &.topright
      top 10%
      right 0
    &.midleft
      top 40%
      left 0
    &.midright
      top 40%
      right 0
    &.centered
      font: f.copy1
      line-height 25px
      top 50%
      left 50%
      margin-top -126px
      margin-left -197px
      text-align center
    &.gold
      background-color: rgba(c.white2, 0.95)
      color: c.gold1
    &.red
      background-color: rgba(c.red1, 0.95)
      color: c.white1
      > .inner > .title
        color: c.white1

