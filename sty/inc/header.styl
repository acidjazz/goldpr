header
  desktop()
  padding 20px
  > .logo
    float left
    width 250px
    height 120px
  > .menu
    float right
    margin 50px 0 0 0
    font: f.copy2
    > .option
      cursor pointer
      float left
      padding 10px
      margin 0 0 0 10px
      text-align center
      text-transform uppercase
      color: c.gold1
      transition border 2s linear
      text-decoration none
      &:hover
        border-bottom: 2px solid c.gold1
      &.on
        background-color: c.gold1
        color: c.white1

@media all and (min-width: 1px) and (max-width: 1000px)

  header
    padding 20px
    > .logo
      float none
      width 80vw
      height auto
      margin auto
    > .menu
      display none
